@model ProyectoMerck.Models.FertilityVM

<header style="background-color:#2EBDCD">
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light mb-3">
        <div class="container-fluid">
            <a href="@Url.Action("Index", "Fertility")" class="btn"><i style="color: white; font-size: 1.5em" class="bi bi-chevron-left"></i></a>
            <button style="color: white; font-size: 2em" class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <i class="bi bi-list" style="color:white"></i>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a style="color:white" class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Login</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <img style="display:block; margin-left:auto; margin-right:auto" src="~/images/MerckFertilidad.JPG" />
</header>

@using (Html.BeginForm("CalculateFertility", "Fertility", FormMethod.Post, new { id = "CalculateFertilityForm" }))
{
    <div style="background-color:#2EBDCD;">
        <div class="row justify-content-center">
            <div class="col-1"><i style="color: white; font-size: 2em; opacity:0.8" class="bi bi-chevron-left"></i></div>
            <div class="col-7 offset-1 text-center align-self-center" style="color: white; font-size: 2em">Formulario</div>
            <div class="col-2">
                    <i style="color: white; font-size: 2em; opacity:0.8" class="bi bi-chevron-right"></i>
                </div>

            <div style="background-color:white; border-top-left-radius: 1000px; border-top-right-radius: 1000px; height: 50px">
                </div>
        </div>
    </div>

    <div class="container">

    <div style="background-color:white; ">
        <div style="padding-top: 4em" class="row justify-content-center">
            <div class="col-1 d-flex justify-content-center mx-5">
                <i class="bi bi-person-standing-dress d-flex align-items-center" style="color:#403575; background-color:#E4E7F8; border-radius:3px; font-size:4em"></i>
            </div>
            <div class="col-4">
                <row>
                    <p style="color:#403575; text-align:center">Edad actual</p>
                </row>
                <row>

                    @Html.DropDownListFor(model => model.ActualAge, Enumerable.Range(12,45).Select(age =>
                new SelectListItem() {
                Value = age.ToString(),
                Text = age.ToString()
                })
                , new {@class = "form-select form-select-lg mb-3", aria_label = ".form-select-lg example"})

                </row>
            </div>
        </div>
    </div>


    <div style="padding-top: 2em; background-color:white" class="row d-flex justify-content-center">
        <div class="col-1 d-flex justify-content-center mx-5">
            <i class="bi bi-calendar-check d-flex align-items-center" style="color:#E26DA2; background-color:#E4E7F8; border-radius:3px; font-size:4em"></i>
        </div>
        <div class="col-4">
            <row>
                <p style="color:#E26DA2; text-align:center">Edad primera menstruacion</p>
            </row>
            <row>
                @Html.DropDownListFor(model => model.FirstAge,
            Enumerable.Range(12,45).Select(age => new SelectListItem() {
            Text = age.ToString(),
            Value = age.ToString()
            }
            ) , new {@class = "form-select form-select-lg mb-3", aria_label = ".form-select-lg example"})
            </row>
        </div>
    </div>



    </div>



    <div class="text-center d-flex justify-content-center">
        <button class="btn col-7 p-1 my-5 border-light" style="color:white; border-radius: 50px; background-color:darkcyan;">Iniciar</button>
    </div>
}



<script src="~/js/index.js"></script>
