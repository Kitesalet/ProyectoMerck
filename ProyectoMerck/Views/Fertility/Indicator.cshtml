@model ProyectoMerck.Models.FertilityVM

<div style="@(Model.FertilityLevel != FertilityLevel.High ? "background-color:aqua;" : "background-color:deeppink;")">
    <div class="row justify-content-center">

            <div class="col-1">
                <a href="@Url.Action("Index", "Fertility")" class="btn btn-danger">
                    <i style="color: white; font-size: 2em; opacity:0.8" class="bi bi-chevron-left"></i>
                </a>
            </div>



        <div class="col-7 offset-1 text-center align-self-center" style="color: white; font-size: 2em">Indicador</div>
        <div class="col-2">
                <i style="color: white; font-size: 2em; opacity:0.8" class="bi bi-chevron-right"></i>
        </div>

        @if(Model.FertilityLevel == FertilityLevel.High)
        {
            <div style="color:white; text-align:center">
                <h4>Edad primera menstruación: @Model.FirstAge</h4>
                <h4>Edad actual: @Model.ActualAge</h4>
                <h4>Conteo de ovulos: @Model.OvuleCount</h4>
            </div>
        }


        <div style="background-color:white; border-top-left-radius: 1000px; border-top-right-radius: 1000px; height: 50px">
        </div>

    </div>


</div>

<div style="background-color:white; border-top-left-radius: 20px; border-top-right-radius: 20px">

    <div style="padding-top: 4em" class="row d-flex justify-content-center">
            <div class="col-4 d-flex justify-content-center">
            <i class="bi bi-flower1 d-flex align-items-center" style="@(Model.FertilityLevel == FertilityLevel.Low ? "color:white; background-color: deeppink; border-radius:3px; font-size:4em" : "color:dimgray; background-color: darkgray; border-radius:3px; font-size:4em")"></i>
            </div>
            <div class="col-4 d-flex justify-content-center">
            <i class="bi bi-flower1 d-flex align-items-center" style="@(Model.FertilityLevel == FertilityLevel.Medium ? "color:white; background-color: deeppink; border-radius:3px; font-size:4em" : "color:dimgray; background-color: darkgray; border-radius:3px; font-size:4em")"></i>
            </div>
            <div class="col-4 d-flex justify-content-center">
            <i class="bi bi-flower1 d-flex align-items-center" style="@(Model.FertilityLevel == FertilityLevel.High ? "color:white; background-color: deeppink; border-radius:3px; font-size:4em" : "color:dimgray; background-color: darkgray; border-radius:3px; font-size:4em")"></i>
            </div>
 
    </div>

    <div style="padding-top: 0.5em; padding-bottom:1em" class="row d-flex justify-content-center">
        <div class="col-4 d-flex justify-content-center">
            <h3 style="@(Model.FertilityLevel == FertilityLevel.Low ? "color:black;" : "color:dimgray; opacity:0.3")">Bajo</h3>
        </div>
           <div class="col-4 d-flex justify-content-center">
            <h3 style="@(Model.FertilityLevel == FertilityLevel.Medium ? "color:black" : "color:dimgray; opacity:0.3")">Medio</h3>
        </div>
        <div class="col-4 d-flex justify-content-center">
            <h3 style="@(Model.FertilityLevel == FertilityLevel.High ? "color:black" : "color:dimgray; opacity:0.3")">Alto</h3>
        </div>
    </div>

    @if(Model.FertilityLevel != FertilityLevel.High)
    {
        <hr />

        <h3 class="text-center">Estas son nuestras clínicas</h3>

        <div id="mapper" style="width: 100%; height: 400px; margin-top:3em ; border-top-right-radius: 20px; border-top-left-radius: 20px;">
        </div>
    }



</div>

<script src="~/js/mapper.js"></script>
